<script src="/PublishedContent/js/BasicCTSSearchPage.js" type="text/javascript"></script>

<div class="large-9 columns">
  <form class="clinical-trials-search-form basic-search" action="$SearchResults.ResultsPagePrettyUrl" method="get">

    <fieldset id="fieldset-type" aria-labelledby="legend-type">
      <div class="row">
        <div class="large-4 small-11 columns legend" id="legend-type"><label class="bold" for="ct">Type/Condition</label></div>
        <div class="large-8 columns">
          <div class="row">
            <input placeholder="Start typing to select a cancer type" type="text" id="ct" maxlength="100" name="ct" autocomplete="off">
                </div>
          <div class="row">
            Not sure of your cancer type? <a class="basiccts-keyword-toggle" href="#">Search by keyword</a> instead.
          </div>
        </div>
      </div>
    </fieldset>

    <fieldset id="fieldset-keyword" aria-labelledby="legend-keyword" style="display: none;">
      <div class="row">
        <div class="large-4 small-11 columns legend" id="legend-keyword"><label class="bold" for="q">Keyword</label></div>
        <div class="large-8 columns">
          <div class="row">
            <input type="text" id="q" maxlength="100" name="q" placeholder="Examples: PSA, HER-2, &quot;Paget disease&quot;">
                </div>
          <div class="row">
            <a class="basiccts-cancertype-toggle" href="#">Search by cancer type</a> instead.
          </div>
        </div>
      </div>
    </fieldset>

    <fieldset aria-labelledby="legend-zip">
      <div class="row">
        <div class="large-4 small-11 columns legend" id="legend-zip"><label class="bold" for="z">U.S. ZIP Code</label></div>
        <div class="large-8 columns">
          <div class="row">
            <input id="z" type="text" maxlength="5" name="z">
                </div>
          <div class="row">Show trials near this U.S. ZIP code.</div>
        </div>
      </div>
    </fieldset>

    <fieldset aria-labelledby="legend-age">
      <div class="row">
        <div class="large-4 small-11 columns legend" id="legend-age"><label class="bold" for="a">Age</label></div>
        <div class="large-8 columns">
          <div class="row">
            <input class="small-3" type="text" id="a" maxlength="3" name="a">
                </div>
          <div class="row">Your age helps determine which trials are right for you.</div>
        </div>
      </div>
    </fieldset>

    <div class="row">
      <div class="large-8 columns right">
        <input type="submit" class="submit button" value="Search">
        </div>
    </div>
  </form>
</div>
