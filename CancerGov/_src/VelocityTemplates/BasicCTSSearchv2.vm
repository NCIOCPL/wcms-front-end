<div class="medium-9 columns">
#if ($SearchResults.Control.Redirected)
    <div style="padding: 12px; margin: 10px 0px; background-color: #feefb3;">
        <p style="margin: 10px 22px; vertical-align: middle;">We recently updated our clinical trials information. To get the most accurate results, you should rerun your search.</i></p>
        <p style="margin: 10px 22px; vertical-align: middle;">We apologize for any inconvenience. If you have any questions, please contact our Cancer Information Service at 1-800-4-CANCER.</p>
    </div>
#end
    <form id="form--cts-basic" class="clinical-trials-search-form basic-search adv-search" action="$SearchResults.ResultsPagePrettyUrl" method="get">
        <!-- BEGIN select2 (cancer type) module -->
        <fieldset id="fieldset--type">
            <div class="adv-fieldset-header">
                <h4>CANCER TYPE
                    <a href="/about-cancer/treatment/clinical-trials/search/help#1" class="text-icon-help right" target="_blank" aria-label="Help">?</a>
                </h4>
            </div>
            <div class="adv-fieldset-body">
                <div class="row">
                    <div>You must first select a cancer type. Based on that selection, you will then be able to choose additional options, if applicable, from the subsequent fields.</div>
                </div>
                <div class="row">
                    <div>
                    <label>Primary Type/Condition<label>
                    </div>
                </div>
                <div class="row">
                    <select id="ct-select" class="no-auto-jqueryui" name="t" style="width:97%">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="row">
                    <div>
                    <label>Sub-type</label>
                    </div>
                </div>
                <div class="row">
                    <select id="st-multiselect" name="st" multiple data-placeholder="Select a sub-type" placeholder="Select cancer type first" style="width:97%"></select>
                </div>
                <div class="row">
                    <div>
                    <label>Stage</label>
                    </div>
                </div>
                <div class="row">
                    <select id="stg-multiselect" name="stg" multiple data-placeholder="Select a stage" placeholder="Select cancer type or sub-type first" style="width:97%"></select>
                </div>
                <div class="row hide">
                    <div>
                    <label>Side Effects / Biomarkers / Participant Attributes</label>
                    </div>
                </div>
                <div class="row hide">
                    <select id="fin-multiselect" name="fin" multiple data-placeholder="Examples: Nausea, BRCA1" placeholder="Select cancer type or sub-type first" style="width:97%"></select>
                </div>
            </div>
        </fieldset>
        <!-- END select2 (cancer type) module -->

        <!-- BEGIN age/keyword divs -->
        <div class="row" data-match-height>
            <fieldset id="fieldset--age" class="large-6 columns gutter equalheight">
                <div class="adv-fieldset-header">
                    <h4>AGE
                        <a href="/about-cancer/treatment/clinical-trials/search/help#2" class="text-icon-help right" target="_blank" aria-label="Help">?</a>
                    </h4>
                </div>
                <div class="adv-fieldset-body">
                    <div class="row">
                        <div>Enter the age of the patient</div>
                    </div>
                    <div class="row">
                        <div>
                            <input id="a" name="a" maxlength="3" autocomplete="off" aria-labelledby="legend--age" placeholder="" type="text" error-msg="Please enter a number between 1 and 120.">
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset id="fieldset--keyword" class="large-6 columns gutter equalheight">
                <div class="adv-fieldset-header">
                    <h4>KEYWORDS/PHRASES
                        <a href="/about-cancer/treatment/clinical-trials/search/help#4" class="text-icon-help right" target="_blank" aria-label="Help">?</a>
                    </h4>
                </div>
                <div class="adv-fieldset-body">
                    <div class="row">
                        <div>Search by word or phrase (use quotation marks with phrases)</div>
                    </div>
                    <div class="row">
                        <div>
                            <input id="q" name="q" aria-labelledby="legend--keyword" placeholder="Examples: PSA, &quot;Paget disease&quot;" type="text">
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
        <!-- END age/keyword divs -->

        <!-- BEGIN location fieldsets -->
        <fieldset id="fieldset--location">
            <div class="adv-fieldset-header">
                <h4>LOCATION
                    <a href="/about-cancer/treatment/clinical-trials/search/help#2" class="text-icon-help right" target="_blank" aria-label="Help">?</a>
                </h4>
            </div>
            <div class="adv-fieldset-body">
                <div class="row">
                    Use these options to search for trials near a specific zip code; in a country, city, and state; at a particular hospital/institution; or at the National Institutes of Health clinical center. The default selection will search for trials in all available locations.
                </div>
                <div class="row">
                    <fieldset id="fieldset--your-location">
                        <input id="your-location" name="loc" value="1" type="hidden">
                        <div class="row">
                            <div class="z-input large-6 columns gutter">
                                <label for="z">U.S. ZIP Code: </label>
                                <input id="z" name="z" maxlength="5" type="text" error-msg="Please enter a valid 5 digit ZIP code.">
                            </div>
                            <div class="zp-input large-6 columns">
                                <label for="zp">Radius: </label>
                                <select id="zp" name="zp" class="fullwidth">
                                    <option value="25">25 miles</option>
                                    <option value="50">50 miles</option>
                                    <option selected="selected" value="100">100 miles</option>
                                    <option value="150">150 miles</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </fieldset>
        <!-- END location fieldsets -->
        <!-- Hidden input for passing originating search form -->
		<input name="rl" value="1" type="hidden" id="rl">
        <div class="row">
            <div class="large-12">
                <input type="submit" class="submit button" value="Search">
            </div>
        </div>
    </form>
</div>
